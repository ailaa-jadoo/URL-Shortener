<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700;800;900&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
        }

        h1 {
            color: #2c666e;
            font-weight: 700;
        }

        a {
            text-decoration: none;
            color: #333533;
        }

        .fullUrl,
        .fullUrl:hover {
            color: #6fffe9;
        }

        .shortUrl,
        .shortUrl:hover {
            color: #6fffe9;
        }

        .click {
            color: #6fffe9;
        }
    </style>

</head>

<body>

    <div class="container">
        <h1 class="text-center fs-1 mt-5">URL Shrinker</h1>
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <div class="input-group mb-3">
                <input required placeholder="Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
                <button class="btn btn-dark" type="submit">
                    Shrink
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                        class="bi bi-link-45deg" viewBox="0 0 16 16">
                        <path
                            d="M4.715 6.542 3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.002 1.002 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z" />
                        <path
                            d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 1 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 1 0-4.243-4.243L6.586 4.672z" />
                    </svg>
                </button>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th class="fs-5">Full URL</th>
                        <th class="fs-5">Short URL</th>
                        <th class="fs-5">Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach(shortUrl=> { %>
                        <tr>
                            <td><a class="fullUrl" href="<%= shortUrl.full %>">
                                    <%= shortUrl.full %>
                                </a></td>
                            <td><a class="shortUrl" href="<%= shortUrl.short %>">
                                    <%= shortUrl.short %>
                                </a></td>
                            <td>
                                <span class="click">
                                    <%= shortUrl.clicks %>
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>

</body>

</html>